import random

caracteres= "+-/*!&$#?=@abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"

longitud= int(input("Cuantos caracteres quieres que tenga tu contrase√±a, se recomiendan entre 7-13 caracteres: "))

contrasena=""

for i in range(longitud):
    c = random.choice(caracteres)
    contrasena += c
print(contrasena)
